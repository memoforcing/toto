        </thead>
        <tbody id="tabela-tres">



            <% for(let itemb of listItemsquatro){%>
           
                <tr>    
                    <td><%= itemb.concurso %></td>
                    <td><%= itemb.n1 %></td>
                    <td><%= itemb.n2 %></td>
