<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Charts</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div style="width: 600px; height: 300px;">
        <canvas id="grafico1" style="width: 600px; height: 300px; background-color: rgb(207, 192, 221);"></canvas>
    </div>    
    <script>
        const ctx = document.getElementById('grafico1');

        let labelx = ["Brasil", "USA", "Canada", "China", "France", "Japan", "UK", "Singapore" ]
        let valorex = [1,4,2,3,6,2,7,3]
      
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: labelx,
            datasets: [{
              label: '# of Votes',
              data: valorex,
              borderWidth: 3
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      </script>
   
    
</body>

</html>